{
  "name": "{{cookiecutter.project_name}}",
  "version": "0.0.1",
  "main": "dist/app.js",
  "author": "{{cookiecutter.author}}",
  "license": "MIT",
  "scripts": {
    "build:image": "docker build --build-arg UID=$(id -u) --build-arg GID=$(id -g) -t {{cookiecutter.docker_tag}}:dev .",
    "compile": "docker run --rm -it -v $(pwd):/srv/app {{cookiecutter.docker_tag}}:dev local:compile",
    "start": "docker run --rm -it -v $(pwd):/srv/app -p 3000:3000 -p 9229:9229 {{cookiecutter.docker_tag}}:dev local:start",
    "test": "docker run --rm -it -v $(pwd):/srv/app -p 9230:9230 {{cookiecutter.docker_tag}}:dev local:test",
    "local:compile": "tsc",
    "local:start": "ts-node-dev --respawn --no-notify --inspect=0.0.0.0:9229 ./src/app.ts",
    "local:test": "nyc mocha -r ts-node/register --inspect=0.0.0.0:9230 src/**/*.spec.ts",
    "docker": "docker run --rm -it -v $(pwd):/srv/app {{cookiecutter.docker_tag}}:dev"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.4"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
