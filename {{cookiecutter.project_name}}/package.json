{
  "name": "{{cookiecutter.project_name}}",
  "version": "0.0.1",
  "main": "dist/app.js",
  "author": "{{cookiecutter.author}}",
  "license": "MIT",
  "scripts": {
    "build:image": "docker-compose build --build-arg UID=$(id -u) --build-arg GID=$(id -g) app",
    "watch": "tsc -w",
    "debug": "docker-compose up",
    "local:debug": "nodemon --legacy-watch --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/app.js",
    "test": "nyc mocha -r ts-node/register --inspect=0.0.0.0:5859 src/**/*.spec.ts",
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
