  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Docker",
      "preLaunchTask": "tsc-watch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [ "debug" ],
      "port": 5858,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/srv/app",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
